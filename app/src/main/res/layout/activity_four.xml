            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/grid_chicken"
                android:layout_width="77dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/grid_chicken" />

            <TextView
                android:id="@+id/grid_chickenT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="курица гриль 750 калл" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kapusta"
                android:layout_width="77dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/kapusta" />

            <TextView
                android:id="@+id/kapustaT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="цветная капуста 130 калл" />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/SUM43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="В СУММЕ: 1030 КАЛЛ" />

</LinearLayout>